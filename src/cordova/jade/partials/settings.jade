alert(ng-repeat='alert in alerts' type='{{alert.type}}' close='closeAlert($index)') {{alert.msg}}
h3 Settings
form(name='loginForm', role='form',ng-submit='submit()')
    .panel.panel-primary
        .panel-heading
            h3.panel-title Ticket Server
        .panel-body
            .form-group
                label.control-label IP Address
                input.input-lg.form-control(name='ip', type='ip', placeholder='192.168.0.1', ng-model='remote.ip')
        .panel-footer.btn-group-lg.text-right
            input.btn.btn-primary.btn-lg(type='submit', value='Save')
