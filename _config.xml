<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0"
        id        = "<%= id %>"
        version   = "<%= version %>"
        >

    <name><%= name %></name>
    <description><%= description %></description>
    <author href="<%= author.url %>" email="<%= author.email %>"><%= author.name %></author>

    <content src="index.html" />

    <preference name="cordova-version" value="4.4.0" />
    <preference name="deployment-target" value="8.0"/>
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="permissions"      value="none"/>
    <preference name="BackupWebStorage" value="local"/>
    <preference name="CordovaWebViewEngine" value="CDVUIWebViewEngine"/>
    <preference name="CordovaDefaultWebViewEngine" value="CDVUIWebViewEngine"/>

    <splash src="www/assets/Default@2x~universal~anyany.png" />

    <access origin="*" />

    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>

    <engine name="ios" spec="^4.4.0"/>
</widget>
